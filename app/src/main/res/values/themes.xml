<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Widget.SampleView"
        parent="">
        <!-- Customize your theme here. -->
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">200dp</item>
        <item name="sampleBorderWidth">4dp</item>
        <item name="borderColor">@color/colorInner</item>
        <item name="innerColor">@color/colorBorder</item>

    </style>

    <style name="ThemeOverlay.AppTheme" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="colorControlNormal">@color/colorReverce</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorReverce</item>



    </style>

    <style name="AppThemeWhite" parent="AppTheme">
        <item name="actionBarTheme">@style/ThemeOverlay.My.White</item>
    </style>


    <style name="AppThemeColored" parent="AppTheme">
        <item name="actionBarTheme">@style/ThemeOverlay.My.Colored</item>

    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->


        <item name="android:actionBarTheme" tools:targetApi="lollipop"> @style/Base.ThemeOverlay.AppCompat.ActionBar.my</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title.My </item>



        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>

       <!-- <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">?attr/colorControlActivated</item>-->
        <item name="android:editTextColor">@color/colorSecondaryForTextInverce</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryForText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryForText</item>
        <item name="android:textColorTertiary">@color/colorTrihderyForText</item>

      <!--  <item name="android:alertDialogStyle">@style/Widget.Sample.Button.ButtonBar.AlertDialog</item>-->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored.OtherColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored.SecondColor</item>
        <item name="buttonBarNeutralButtonStyle">@color/colorPrimaryForTextInverce</item>
    </style>

    <style name="AppTheme.Dark" >

        <item name="android:colorBackground">@color/colorBlack</item>
        <item name="android:colorForegroundInverse">@color/colorReverce</item>
       <!-- <item name="android:windowBackground"></item>-->
        <item name="android:textColorPrimary">@color/colorPrimaryForTextInverce</item>
        <item name="android:textColorSecondary">@color/colorSecondaryForTextInverce</item>
        <item name="android:textColorTertiary">@color/colorTrihderyForTextInverce</item>
    </style>

</resources>